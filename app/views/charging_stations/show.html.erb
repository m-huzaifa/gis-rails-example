<% lat = @charging_station.latitude %>
<% lng = @charging_station.longitude %>

<% provide :head_tags do %>
  <meta name='turbolinks-visit-control' content='reload'>
  <script>
    document.addEventListener("DOMContentLoaded", function(){
      initMap(<%=@charging_station.latitude%>, <%=@charging_station.longitude%>)
    });
  </script>
<% end %>

<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @charging_station.name %>
</p>

<p>
  <strong>Address:</strong>
  <%= @charging_station.address %>
</p>

<p>
  <strong>City:</strong>
  <%= @charging_station.city %>
</p>

<p>
  <strong>State:</strong>
  <%= @charging_station.state %>
</p>

<p>
  <strong>Postal Code:</strong>
  <%= @charging_station.postal_code %>
</p>

<p>
  <strong>Latitude:</strong>
  <%= @charging_station.latitude %>
</p>

<p>
  <strong>Longitude:</strong>
  <%= @charging_station.longitude %>
</p>

<p>
  <div id="map" class="map"></div>
</p>

<%= link_to 'Back', charging_stations_path(search: [lat, lng]) %>
